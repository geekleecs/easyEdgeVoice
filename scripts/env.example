# EasyEdgeVoice 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# ==================== 基础配置 ====================
# 服务器绑定地址 (0.0.0.0 允许外部访问，127.0.0.1 仅本地访问)
HOST=0.0.0.0
# 服务器端口
PORT=3000
# 运行环境 (development/production)
NODE_ENV=development

# ==================== TTS 配置 ====================
# OpenAI 兼容 API 基础地址
OPENAI_BASE_URL=https://api.openai.com/v1
# OpenAI API 密钥
OPENAI_API_KEY=your_openai_api_key_here
# 使用的模型名称
MODEL_NAME=gpt-4o-mini

# 速率限制配置
RATE_LIMIT_WINDOW=10
RATE_LIMIT=1000000
# Edge-TTS API 并发数
EDGE_API_LIMIT=3

# ==================== 数据库配置（可选） ====================
# 是否启用 MySQL 记录
ENABLE_MYSQL=false
# MySQL 连接配置
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=easyedgevoice
MYSQL_CONNECTION_LIMIT=10
MYSQL_SSL=false

# 数据存储选项
STORE_TTS_TEXT=false
STORE_ERR_DETAIL=false

# ==================== 安全配置 ====================
# 是否启用 Helmet 安全中间件
USE_HELMET=false
# 是否启用请求限制
USE_LIMIT=false
# 直接生成限制
DIRECT_GEN_LIMIT=200

# ==================== 文本限制 ====================
# 文本长度限制（0 表示无限制）
LIMIT_TEXT_LENGTH=0
# 文本长度超限错误信息
LIMIT_TEXT_LENGTH_ERROR_MESSAGE=文本长度超出限制

# ==================== 其他配置 ====================
# 静态文件域名（开发环境自动设置）
STATIC_DOMAIN=
# 是否注册 OpenAI TTS
REGISTER_OPENAI_TTS=false

