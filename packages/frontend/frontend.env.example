# ==================== 前端专用配置 ====================
# 此文件包含前端特有的配置项
# 主配置文件 .env 中的配置会自动继承

# ==================== API 配置 ====================
# 后端 API 基础地址
VITE_API_BASE_URL=http://localhost:3000
# API 超时时间（毫秒）
VITE_API_TIMEOUT=30000
# 是否启用 API 缓存
VITE_API_CACHE=true

# ==================== 构建配置 ====================
# 构建输出目录
VITE_BUILD_DIR=dist
# 是否启用源码映射
VITE_SOURCEMAP=true
# 是否启用压缩
VITE_COMPRESS=true
# 构建分析
VITE_ANALYZE=false

# ==================== 开发配置 ====================
# 开发服务器端口
VITE_DEV_PORT=5173
# 开发服务器主机
VITE_DEV_HOST=localhost
# 是否启用 HTTPS
VITE_DEV_HTTPS=false
# 是否自动打开浏览器
VITE_DEV_OPEN=true

# ==================== UI 配置 ====================
# 应用标题
VITE_APP_TITLE=EasyEdgeVoice
# 应用描述
VITE_APP_DESCRIPTION=智能语音生成平台
# 默认语言
VITE_DEFAULT_LANGUAGE=zh-CN
# 主题模式 (light, dark, auto)
VITE_THEME_MODE=auto

# ==================== 功能开关 ====================
# 是否启用用户注册
VITE_ENABLE_REGISTER=true
# 是否启用管理员功能
VITE_ENABLE_ADMIN=true
# 是否启用音频下载
VITE_ENABLE_DOWNLOAD=true
# 是否启用实时流式生成
VITE_ENABLE_STREAM=true

# ==================== 第三方配置 ====================
# Google Analytics ID
VITE_GA_ID=
# 百度统计 ID
VITE_BAIDU_ANALYTICS=
# 错误监控服务
VITE_ERROR_REPORTING=false
