# Server
PORT=3000
USE_HELMET=false
USE_LIMIT=false
RATE_LIMIT_WINDOW=1
RATE_LIMIT=10
EDGE_API_LIMIT=10
DIRECT_GEN_LIMIT=200

# OpenAI (可选，LLM 模式使用)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_key_here
MODEL_NAME=gpt-4o-mini

# Feature toggles
REGISTER_OPENAI_TTS=false

# Global text limit (0 表示不限制)
LIMIT_TEXT_LENGTH=0
LIMIT_TEXT_LENGTH_ERROR_MESSAGE=

# MySQL（可选）
ENABLE_MYSQL=false
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=tts_user
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=easyedgevoice
MYSQL_CONNECTION_LIMIT=10
MYSQL_SSL=false

# 数据落库策略
STORE_TTS_TEXT=true
STORE_ERR_DETAIL=false